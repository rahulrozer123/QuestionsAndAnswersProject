@model QuestionAndAnswerMVC.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Registration", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" id="loginForm">
        <div id="validation-summary"> </div>
        <h4>Login Page</h4>
        <hr />
        <div class="k-form-field">
            <div class="k-form-field-wrap col-md-10">
                @(Html.Kendo()
                   .TextBoxFor(model => model.UserName)
                   .Name("userName")
                   .Label(label => label.Content("User Name"))
                   .HtmlAttributes(new { placeholder = "Enter Full name",@class = "form-control", required = "required" })
                   )
            </div>
        </div>

        <div class="k-form-field">
            <div class="k-form-field-wrap col-md-10">
                @(Html.Kendo()
                .TextBoxFor(model => model.Pwd)
                .Name("pwd")
                .Label(label=>label.Content("Password"))
                .HtmlAttributes(new { type = "password",placeholder = "Enter password",@class="form-control", required = "required" })
                )
            </div>
        </div>

        <div class="k-form-field">
            <div class="k-form-field-wrap col-md-10">
                <button class="btn btn-primary" type="submit" id="loginSubmit">Submit</button>
            </div>
        </div>
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        //Validating the fields if user has entered data or not
        var validator = $("#loginForm").kendoValidator().data("kendoValidator");
        var validationSummary = $("#validation-summary");

        $("#loginSubmit").on("click", function () {
            if (validator.validate()) {
                // If the form is valid, the Validator will return true
            }
            else {
            }
        });

        $("#loginForm").submit(function (event) {
            event.preventDefault();

            if (validator.validate()) {
                validationSummary.html("<div class='k-messagebox k-messagebox-success'>You have been successfully logged in</div>");
            } else {
                validationSummary.html("<div class='k-messagebox k-messagebox-error'>Oops! There is invalid data in the form.</div>");
            }
        });

        $("#loginSubmit").click(function () {
            var login = new Object();
            login.username = $("#userName").val();
            login.pwd = $("#pwd").val();
            $.ajax({
                type: "POST",
                url: "https://localhost:44363/api/LoginModel/",
                contentType: "application/json;charset=utf - 8",
                dataType: "json",
                data: JSON.stringify(login),
                success: function () {
                    if (validator.validate())
                        validationSummary.html("<div class='k-messagebox k-messagebox-success'>You have been successfully logged in</div>");
                },
                error: function () {
                    validationSummary.html("<div class='k-messagebox k-messagebox-error'>Oops! There is invalid data in the form.</div>");
                }
            });
        });
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


