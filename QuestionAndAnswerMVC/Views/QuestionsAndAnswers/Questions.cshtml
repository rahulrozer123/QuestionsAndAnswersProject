@model IEnumerable<QuestionAndAnswerMVC.Models.QuestionsandAnswersViewModel>
@{
    ViewBag.Title = "Questions";
}

@*@if (Session["username"] != null)
    {
        <h4 style="text-align:right">Welcome @Session["username"].ToString()</h4>
    }*@
@using (Html.BeginForm("Questions", "QuestionsAndAnswers", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" id="questionsControl">
        <div class="demo-section k-content">
            <h4>Questions</h4>
            <hr />
            <div class="col-md-10">
                @foreach (var item in Model)
                {
                    <br />                    
                    @item.QuestionID @Html.Label("Question",item.Question , new {id = item.QuestionID })
                    <br />
                    @Html.RadioButton("Option1",item.Option1, new { id = item.Option1 })@item.Option1
                    <br />
                    @Html.RadioButton("Option2" ,item.Option2, new { id = item.Option2 })@item.Option2
                    <br />
                    @Html.RadioButton("Option3",item.Option3, new { id = item.Option3 })@item.Option3
                    <br/>
                    @Html.RadioButton("Option4",item.Option4, new { id = item.Option4 })@item.Option4
                    <br>
                }
                <br />
            </div>            
        </div>
        <br />        
        
            <div class="k-action-button col-md-10">
                <button class="btn btn-primary" type="submit" id="questionsSubmit">Next</button>
            </div>
        
        <br />
    </div>
}
