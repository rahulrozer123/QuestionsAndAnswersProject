@model IEnumerable<QuestionAndAnswerMVC.Models.QuestionsandAnswersViewModel>
@{
    ViewBag.Title = "Questions";
}

@*@if (Session["username"] != null)
    {
        <h4 style="text-align:right">Welcome @Session["username"].ToString()</h4>
    }*@
@using (Html.BeginForm("Questions", "QuestionsAndAnswers", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal" id="questionsControl">
        <div class="demo-section k-content">
            <h4>Questions</h4>
            <hr />
            <div class="col-md-10">
                @{int i = 1; }
                @foreach (var item in Model)
                {
                    <br />
                    @Html.Label("QuestionID", item.QuestionID.ToString(), new { id = item.QuestionID })@item.Question
                    <br />
                    @Html.RadioButton("Option" + i, item.Option1, new { id = item.Option1 })@item.Option1
                    <br />
                    @Html.RadioButton("Option" + i, item.Option2, new { id = item.Option2 })@item.Option2
                    <br />
                    @Html.RadioButton("Option" + i, item.Option3, new { id = item.Option3 })@item.Option3
                    <br />
                    @Html.RadioButton("Option" + i, item.Option4, new { id = item.Option4 })@item.Option4
                    <br>
                    { i += 1; }
                }
                <br />
            </div>
        </div>
        <br />

        <div class="k-action-button col-md-10">
            <button class="btn btn-primary" type="submit" id="questionsSubmit">Next</button>
        </div>

        <br />
    </div>
}
